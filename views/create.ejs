
    <%- include('partials/header') %>
    
    <script type="text/javascript">
        $(window).on('load', function() {
            $('#dataModal').modal('show');
        });
    </script>
    <body>
        <div id="dataModal" class="modal">
            <h3>Para criar um novo questionário preencha os dados:</h3>
            <form action="/create" method="POST" class="modal-form">
                <label for="name">Seu Nome:</label>
                <input type="text" name="name" required ><br>
                <label for="formTitle">Título do Questionário:</label>
                <input type="text" name="formTitle" required><br>
                <label for="country">País:</label>
                <input type="text" name="country" required><br>
                <label for="country">Cidade:</label>
                <input type="text" name="country" required><br>

                <button class="mod-btn" type="submit" name="modalButton" value="modal">Criar</button>
            </form>
        </div>

        <div class="quest-container">

            <h2>Questionário <%= questId %>  :</h2>
            <form action="/create" method="POST" class="quest-form">
                
                <% if(questions.length){ %> 
                    <% questionId = 0; %> 
                    <% questions.forEach(function(item) { %>
                        <label for="<%= questionId %>"> <%= item %>  :</label><br>
                        <input type="text" name="<%= questionId %>" ><br> 
                        <% questionId += 1 %> 
                    <% }) %>
                <% } %>      
                
                <h2>Add new item:</h2>

                <div class="add-form">
                    <input type="text" name="newItem" placeholder="New question" autocomplete="off">
                    <button class="add-btn" type="submit" name="button" value="add" disabled>+</button>
                </div>

                <button class="quest-btn" type="submit" name="button" value="save">Save</button>
            </form>
        </div>

        <script>
            var addElement = document.getElementsByName('newItem');
            addElement[0].addEventListener('input', function(){
                if(addElement[0].value != ""){
                    console.log("disable");
                    document.getElementsByClassName('add-btn')[0].removeAttribute('disabled');
                }else{
                    console.log("enable");
                    document.getElementsByClassName('add-btn')[0].disabled = true;
                }
            });
        </script>

    </body>
</html>